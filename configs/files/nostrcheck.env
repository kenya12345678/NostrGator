# NostrCheck Server Configuration for NostrGator
# =============================================

# Server Configuration
NODE_ENV=production
PORT=3000
DOMAIN=localhost:7006
PROTOCOL=http

# Database Configuration (SQLite for simplicity)
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/data/nostrcheck.db

# File Storage Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/wav,text/plain,application/pdf

# NIP-96 Configuration
NIP96_ENABLED=true
NIP96_API_URL=http://localhost:7006/api/v1/upload
NIP96_DOWNLOAD_URL=http://localhost:7006/api/v1/files

# Blossom Configuration
BLOSSOM_ENABLED=true
BLOSSOM_API_URL=http://localhost:7006/api/v1/blossom

# NIP-05 Configuration
NIP05_ENABLED=true
NIP05_DOMAIN=localhost

# Authentication & Security
REQUIRE_AUTH=false
ENABLE_REGISTRATION=true
ENABLE_PUBLIC_UPLOAD=true
ENABLE_PUBLIC_GALLERY=true

# Admin Configuration
ADMIN_NPUB=npub1example1234567890abcdefghijklmnopqrstuvwxyz1234567890abcdef
ADMIN_EMAIL=admin@localhost

# Lightning Configuration (disabled for now)
LIGHTNING_ENABLED=false
LIGHTNING_BACKEND=none

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/nostrcheck.log

# Features
ENABLE_AI_MODERATION=false
ENABLE_RELAY=false  # We have dedicated relays
ENABLE_PLUGINS=false

# File Cleanup
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400000  # 24 hours
CLEANUP_MAX_AGE=31536000000  # 1 year

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data: blob:; media-src 'self' blob:

# Session Configuration
SESSION_SECRET=change-this-secret-key-in-production
SESSION_MAX_AGE=86400000  # 24 hours

# Email Configuration (disabled)
EMAIL_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false

# Development/Debug
DEBUG=false
VERBOSE_LOGGING=false
